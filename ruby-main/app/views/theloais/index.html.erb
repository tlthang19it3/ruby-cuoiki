    	<h1 style="margin-left: 100px;">Danh sách thể loại</h1>
<table class="table" style="width: 800px;margin-left:200px;margin-top: 100px;">
  <thead class="thead-dark">
    <tr style="color: white;background: black;">
      <th scope="col">#</th>
      <th scope="col">Thể Loại</th>
      <th colspan="2" style="width: 200px;"></th>
    </tr>
  </thead>
  <tbody>
  <% @theloai.each do |tl| %>
    <tr>
      <th scope="row"><%= tl.id %></th>
      <td><%= link_to tl.tenTheLoai, theloais_path(tl) %></td>
      <td style="width: 100px;"><%= button_to 'Edit', edit_theloai_path(tl), method: 'get' , class: "recipe"%></td>
      <td style="width: 100px;"><%= button_to 'Remove', theloai_path(tl), method: 'delete', data: { confirm: 'Are you sure?' }  ,class: "recipe" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div style="margin-left: 200px;margin-top:50px;">
    <%= button_to 'ADD', new_theloai_path, method: 'get'%>
</div>
